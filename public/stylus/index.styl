@import fonts
@import variables
@import hero
@import header
@import glitches

@import 'descriptions/story'
@import 'descriptions/manifesto'

*, html {
  margin: 0
  padding: 0
}

body {
  background-color: background-color
  overflow-x: hidden
  margin: 0 auto
}

a {
  text-decoration: none
  color: text-color
}

p {
  letter-spacing: 0px
  line-height: 28px
  margin-bottom: 7px
  color: text-color
}

#page-title {
  position: absolute
  width: 1px
  height: 1px
  top: 0%
  left: 0%
  clip: rect(0px, 1px, 1px, 0px)
}

.section-description h2 {
  font: 34px Brandon
  color: text-color
  text-transform: uppercase
}

.section-description p {
  font: 16px Inconsolata
  line-height: 26px
  width: 650px
  margin-top: 10px
}
