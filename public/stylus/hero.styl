// Hero declarations

#hero {
  width: 100vw
  height: 100vh
  background-color: background-color
}

#hero-image-wrapper {
  display: table
  position: relative
  margin: 30px auto 0 auto
}

#hero-image {
  background: url(hero-image)
  background-size: contain
  background-repeat: no-repeat
  width: 490px
  height: 694px
  display: table-cell
}

#hero-description {
  position: absolute
  top: 45%
  transform: translateY(-50%);
  min-width: 200px
  display: table-cell
}

#hero-description, p {
  font: 16px Inconsolata
  letter-spacing: 0px
  line-height: 28px
  color: text-color
  margin-bottom: 12px
}
