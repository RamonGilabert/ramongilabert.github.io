// Top header

#hero-header {
  position: fixed
  width: 100%
  height: 80px
  top: 0
  left: 0
  margin: 0 auto
}

#email-link-wrapper {
  position: absolute
  margin-top: 40px
  transform: translateY(-50%)
  right: 105px
}

#email-link {
  font: 15px Inconsolata
}

#email-link:after {
  content: ''
  position: absolute
  height: 1px
  background-color: text-color
  top: 55%
  left: 0%
  right: 100%
  transition: right 0.25s ease-out
}

#email-link:hover:after {
  right: 0
}
