<!DOCTYPE html>
<html>
  <head>
    {{> head }}
    <title>Ramon Gilabert</title>
    {{> imports }}
  </head>
  {{# myself }}
  <body id='myself'>
    <header>
      <h1 class='page-title'>{{ page }}</h1>
      <h2>{{ header }}</h2>
      <img class='designer' src='./images/myself/designer.svg'>
      <div class='indicator'><a href='#'>work</a></div>
      <div class='noise'></div>
      <img class='circle' src='./images/general/circle.png'>
      <img class='myself' src='./images/myself/myself.png'>
    </header>
    <div class='content'>
      <div class='story'>
        {{# story }}
        <div class='inner'>
          <h2>{{ title }}<span class='spaced dot'>.</span></h2>
          <img class='path' src='./images/general/path.svg'>
          <p>{{{ text }}}</p>
        </div>
        {{/ story }}
      </div>
      <div class='projects'>
        <div class='inner'>
          {{# projects }}
          <div class='project {{ name }}'>
            <img class='peek' src='{{ image }}'>
            <div class='indicator'><p>case study</p></div>
            <p class='role'>{{ role }}</p>
            <div class='name'>
              <img class='path' src='./images/general/path.svg'>
              <h3>{{ name }}<span class='spaced dot'>.</span></h3>
            </div>
            <a href='{{ link }}'></a>
          </div>
          {{/ projects }}
        </div>
      </div>
      <div class='recognition'>
        {{# recognition }}
        <div class='inner'>
          <h2>{{ title }}<span class='spaced dot'>.</span></h2>
          <img class='path' src='./images/general/path.svg'>
          {{# others }}
          <p>{{{ text }}}</p>
          {{/ others }}
          {{# awards }}
          <h3>{{ title }}<span class='spaced dot'>.</span></h3>
          <img class='path' src='./images/general/path.svg'>
          {{# list }}
          <p><span class='dot'>{{ highlight }}</span> {{ rest }}</p>
          {{/ list }}
          {{/ awards }}
        </div>
        {{/ recognition }}
      </div>
    </div>
    {{> footer }}
  </body>
  {{/ myself }}
</html>
