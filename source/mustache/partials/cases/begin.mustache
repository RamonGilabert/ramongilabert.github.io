<!DOCTYPE html>
<html>
  <head>
    {{> head }}
    <title>{{ title }}</title>
  </head>
  <body class='case' id='{{ name }}'>
    <div class='transition'>
      <div class='noise'></div>
    </div>
    <h1 class='page-title'>{{ page }}</h1>
    <div class='content'>
      <header>
        <div class='indicator home'><a class='navigation' href='./'>home</a></div>
        <div class='inner'>
          <h2>{{ name }}<span class='spaced dot'>.</span></h2>
          <img class='top-path path' src='./images/general/path.svg'>
          <h3 class='role'>{{ role }}</h3>
          {{# summarize }}
          {{> text }}
          {{/ summarize }}
        </div>
      </header>
      {{# summarize }}
      {{> image }}
      {{/ summarize }}
      {{# story }}
      {{> title }}
      {{> image }}
      {{/ story }}
      {{# solution }}
      {{> title }}
      {{> image }}
      {{/ solution }}
