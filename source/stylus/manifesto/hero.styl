// Hero manifesto declarations

#manifesto {

  image-height = 80vh
  maximum-image-height = 800px
  minimum-image-height = 475px
  minimum-height = 600px

  #hero {
    position: relative
    width: 100%
    height: 100%
    min-height: minimum-height
    min-width: minimum-width
    background-color: background-color
  }

  #hero-image-wrapper {
    position: relative
    padding-top: 60px
    margin: 0 auto
    width: 100%
    height: image-height
    min-height: minimum-image-height
  }

  #hero-image {
    position: absolute
    top: 55%
    left: 50%
    transform: translate(-50%, -50%)
    background-position: center

    img {
      height: image-height
      max-height: maximum-image-height
      min-height: minimum-image-height
      transition: initial-transform-transition, initial-opacity-transition
    }
  }

  #hero-description {
    position: absolute
    top: 55%
    transform: translateY(-50%)
    min-width: 200px
    margin-left: 30px
  }

  #hero-description p {
    font: 16px Inconsolata
    color: text-color
    margin-bottom: 22px
    transition: transform 0.55s ease, initial-opacity-transition
  }

  .disclosure-text {
    position: absolute
    font: 14px Inconsolata
    bottom: 42.5px
    left: 80px
  }
}

@media (max-width: minimum-width) {

  #manifesto {

    image-height = 80vh
    maximum-image-height = 800px
    minimum-image-height = 475px
    minimum-height = 600px

    #hero {
      width: 100vw
      height: 100vh
      min-height: 510px
      min-width: 100vw
    }

    #hero-image-wrapper {
      width: 100vw
      height: 100vh
    }

    #hero-image {
      position: relative
      top: 0%
      left: 0%
      height: 50%
      width: 100%
      transform: translateX(0%)

      img {
        position: absolute
        height: 100%
        max-height: 100%
        min-height: 100%
        left: 50%
        transform: translateX(-50%)
      }
    }

    #hero-description {
      width: 100%
      top: auto
      left: 0%
      right: 0%
      bottom: 15%
      margin: 0 auto
      transform: translate(0%)
      text-align: center
    }
  }
}
