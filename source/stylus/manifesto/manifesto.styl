// Manifesto styles

// Story description

#manifesto {
  transition = padding-transition, opacity-transition
  height = 70vh
  minimum-height = 600px * 0.7

  p {
    -webkit-touch-callout: text
    -webkit-user-select: text
    -moz-user-select: text
    -ms-user-select: text
  }

  .story, .manifesto, .awards {
    position: relative
    width: 100vw
    max-width: maximum-width
    height: height
    min-width: minimum-width
    min-height: minimum-height
    left: auto
    right: auto
    margin: 0 auto
  }

  .story {

    .description {
      position: absolute
      top: 50%
      left: 100px
      transform: translate(0, -50%, 0)
      transition: transition

      figure {
        position: absolute
        background-image: url(s-logo)
        background-size: contain
        background-repeat: no-repeat
        width: 100px
        height: 150px
        left: 250px
        opacity: 0.025
      }
    }
  }

  .manifesto {
    margin-bottom: auto

    .description {
      position: absolute
      top: 50%
      right: 100px
      transform: translate(0, -50%, 0)
      transition: transition
      text-align: right

      figure {
        position: absolute
        background-image: url(m-logo)
        background-size: contain
        background-repeat: no-repeat
        width: 165px
        height: 150px
        right: 270px
        opacity: 0.025
      }
    }

    .manifesto-horizontal-glitch {
      position: absolute
      transform: rotateY(180deg)
      top: 150px
      left: 100px
    }
  }

  .awards {

    .description {
      position: absolute
      top: 50%
      left: 100px
      transform: translate(0, -50%, 0)
      transition: transition

      figure {
        position: absolute
        background-image: url(a-logo)
        background-size: contain
        background-repeat: no-repeat
        width: 125px
        height: 135px
        left: 270px
        opacity: 0.025
      }
    }

    .awards-horizontal-glitch {
      position: absolute
      top: 375px
      right: 100px
      width: 20px
      height: 70px
    }
  }

  .section-description h2 {
    font: 34px Brandon
    color: text-color
    text-transform: uppercase
  }

  .section-description p {
    font: 16px Inconsolata
    line-height: 26px
    width: 650px
    margin-top: 10px
  }
}

@media (max-width: minimum-width) {

  #manifesto {

    .story, .manifesto, .awards {
      width: 100vw
      min-width: 100vw
      max-width: 100vw
    }

    .story {

      .description {
        top: 50%
        left: 50px
        right: 50px

        figure {
          width: 90px
          height: 140px
          left: 25%
        }
      }

      .horizontal-glitch {
        display: none
      }
    }

    .manifesto {
      margin-bottom: auto

      .description {
        right: 50px
        left: 50px
        text-align: right

        figure {
          width: 150px
          height: 140px
          right: 35%
        }
      }

      .manifesto-horizontal-glitch {
        display: none
      }
    }

    .awards {

      .description {
        left: 50px
        right: 50px

        figure {
          width: 115px
          height: 120px
          left: 25%
        }
      }

      .awards-horizontal-glitch {
        display: none
      }
    }

    .section-description h2 {
      font: 34px Brandon
      color: text-color
      text-transform: uppercase
    }

    .section-description p {
      font: 16px Inconsolata
      line-height: 26px
      width: auto
      margin-top: 10px
    }
  }
}

@media (max-height: 568px) {

  #manifesto {

    .manifesto {
      margin-bottom: 75px
    }
  }
}
