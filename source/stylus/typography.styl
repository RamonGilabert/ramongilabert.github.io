h1 {
	font-size: size-h1
	font-family: 'Feijoa Display'
	line-height: 52px
}

h2 {
	font-size: size-h2
}

h3 {
	font-size: size-h3
}

h4 {
	font-size: size-h4
}

h5 {
	font-size: size-h5
}

h6 {
	font-size: size-h6
	font-family: 'Apercu Regular Pro'
	line-height: 1.6
}

p {
  font-size: size-p
  color: text-color
}

button, h1, h2, h3, h4, p, a {
  font-smooth: always
  -webkit-font-smoothing: antialiased
}

h1, h2, h3, h4, h5, h6, p {
  cursor: default
  color: text-color
  font-weight: normal
}

a {
  text-decoration: none
  color: link-color
}

h6, p {
  a {
    color: highlight-color
  }
}
