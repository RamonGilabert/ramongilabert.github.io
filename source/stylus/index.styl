@import fonts
@import constants
@import indicator
@import footer
@import effects

@import 'myself/myself'

@import 'cases/general'
@import 'cases/image'
@import 'cases/title'
@import 'cases/subtitle'
@import 'cases/text'

*, html {
  margin: 0
  padding: 0
}

html, body {
  margin: 0 auto
}

body {
  background-color: white-color
  z-index: 1
}

a {
  text-decoration: none
  color: text-color
}

button {
  text-decoration: none
  border: 0px
  background-color: transparent
  cursor: pointer
}

button:focus {
  outline: 0
}

button, h1, h2, h3, h4, p, a {
  font-smooth: always
  -webkit-font-smoothing: antialiased
}

h1, h2, h3, h4, p {
  cursor: default
  color: text-color
}

.page-title {
  position: absolute;
  width: 1px;
  height: 1px;
  top: 0;
  left: 0;
  clip: rect(0, 1px, 1px, 0)
}

.spacing {
  margin-bottom: 2px
}

.indent, .spacing {
  text-indent: 50px
}
