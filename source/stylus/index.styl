*, html {
  margin: 0
  padding: 0
}

html, body {
  margin: 0 auto
}

html, body {
  background-color: white-color
}

a {
  text-decoration: none
  color: text-color
}

button {
  text-decoration: none
  border: 0px
  background-color: transparent
  cursor: pointer
}

button:focus {
  outline: 0
}

button, h1, h2, h3, h4, p, a {
  font-smooth: always
  -webkit-font-smoothing: antialiased
}

h1, h2, h3, h4, p {
  cursor: default
  color: text-color
}

.page-title {
  position: absolute
  width: 1px
  height: 1px
  top: 0
  left: 0
  clip: rect(0, 1px, 1px, 0)
}

body {
  opacity: 0
  transition: 1s ease opacity
}

.hide {
  opacity: 0
}
