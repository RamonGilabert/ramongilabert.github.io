@import fonts
@import constants
@import footer
@import grid

@import 'myself/myself'
@import 'components/navigation'

*, html {
  margin: 0
  padding: 0
}

html, body {
  margin: 0 auto
  background-color: background-color
}

a {
  text-decoration: none
  color: link-color
}

p {
  a {
    color: highlight-color
  }
}

button {
  text-decoration: none
  border: 0px
  background-color: transparent
  cursor: pointer
}

button:focus {
  outline: 0
}

button, h1, h2, h3, h4, p, a {
  font-smooth: always
  -webkit-font-smoothing: antialiased
}

h1, h2, h3, h4, p {
  cursor: default
  color: text-color
}

.email {
  cursor: pointer
}

.page-title {
  position: absolute
  width: 1px
  height: 1px
  top: 0
  left: 0
  clip: rect(0, 1px, 1px, 0)
}

.transition {
  background-color: dark-background-color
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 100
}

.lighter {
  background-color: white-color
}

.hide {
  opacity: 0
}
