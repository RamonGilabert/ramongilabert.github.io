// General styles of the details.

.detail {
  transition = transform 0.1s ease

  width: 100%
  min-width: minimum-width

  .hero {
    position: relative
    width: 100%
    height: 115%
    top: -15vh
    transform: translate3d(0, 0, 0)
    transform-style: preserve-3d

    .hero-overlay, figure {
      background-size: cover
      background-repeat: no-repeat
      background-position: 50% 50%
      width: 100%
      height: 100%
      min-height: 100%
      -webkit-backface-visibility: hidden
      transform: translate3d(0, 0, 0)
    }

    figure {
      transition: background-position 0.1s ease
    }

    .hero-overlay {
      position: absolute
      top: 0
      background-image: url(gradient-image)
    }

    .hero-text-wrapper {
      position: absolute
      width: 100%
      top: 52.5%
      transform: translate3d(0, 0, 0)
      transform-style: preserve-3d
      transform: translateY(-50%)
      text-align: center
      transition: transition

      h2 {
        font: detail-title-font
        text-transform: uppercase
        color: text-color
        transform: translate3d(0, 0, 0)
        transform-style: preserve-3d
      }

      .headers-wrapper {

        p {
          margin = 25px

          position: relative
          display: inline-block
          margin-right: margin
          margin-left: margin
          font: detail-header-font
          transform: translate3d(0, 0, 0)
          transform-style: preserve-3d
        }
      }
    }
  }

  .body-wrapper {
    overflow-x: hidden
    position: relative
    width: 100%
    height: auto
    min-width: minimum-width
    left: 50%
    transform: translateX(-50%)

    .project-wrapper {
      position: relative
      width: 280px
      right: auto
      left: auto
      margin: 0 auto
      margin-top: 160px
      margin-bottom: 300px
      max-width: maximum-width

      h3 {
        font: detail-project-font
        text-transform: uppercase
        color: text-color
      }

      .disclosure {
        width: 35px
        height: 1px
        background-color: text-color
        opacity: 1
        margin-top: 10px
      }

      p {
        margin-top: 25px
        font: detail-text-font
        line-height: 30px
      }

      .text-glitch {
        position: absolute
        width: 80px
        height: 50px
        bottom: -15px
        left: -20px
      }

      .text-glitch:after, .text-glitch:before {
        content: ''
        position: absolute
        background-color: text-color
      }

      .text-glitch:after {
        width: 1px
        height:80%
        top: 0
        left: 0
      }

      .text-glitch:before {
        height: 1px
        width: 90%
        right: 0
        bottom: 0
      }
    }

    .process {
      padding-bottom: 150px
    }

    .process-wrapper {
      overflow: hidden
      width: 100vw
      max-height: 95vh
      background-color: red
      max-width: 1350px
      right: auto
      left: auto
      margin: 0 auto

      img {
        width: 100%
        object-fit: cover
      }
    }

    .image-wrapper, .attempts-wrapper {
      position: relative
      overflow: hidden
      max-width: maximum-width
      margin: 0 auto
      right: auto
      left: auto
    }

    img {
      position: relative
      width: 100%
      margin-bottom: 100px
      transition: transition
    }

    .quote {
      position: relative
      text-align: center
      margin-top: 100px
      margin-bottom: 100px

      .wrapper {
        position: relative
        width: 450px
        right: auto
        left: auto
        margin: 0 auto
        transition: transition

        img {
          position: absolute
          width: 90px
          top: 0px
          left: 0px
        }

        p {
          font: detail-text-font
          line-height: 30px
        }
      }
    }
  }

  .glitch {
    position: absolute
    height: 50px
    top: -150px
    left: 75px

    div {
      position: absolute
      top: 50%
      transform: translate(-25%, -50%)
      background-color: white
      width: 15px
      height: 1px
    }
  }

  .glitch:after, .glitch:before {
    content: ''
    position: absolute
    background-color: text-color
    width: 1px
    left: 0
  }

  .glitch:after {
    height: 30%
    top: 0
  }

  .glitch:before {
    height: 35%
    bottom: 0
  }
}

// Specific details

#lights figure {
  background-image: url(lights-image)
}

#friends figure  {
  background-image: url(friends-image)
}

#branding figure {
  background-image: url(branding-image)
}

@media (max-width: minimum-width) {

  .detail {
    width: 100%
    min-width: 100%

    .hero {

      .hero-text-wrapper {

        h2 {
          font: 60px Brandon
          line-height: 70px
          margin-bottom: 25px
          width: 90%
          margin-left: 5%
        }

        .headers-wrapper {

          p {
            position: relative
            display: block
            margin-top: 5px
            margin-bottom: 20px
          }
        }
      }
    }

    .body-wrapper {
      min-width: 100%

      .project-wrapper {
        margin-top: 100px
        margin-bottom: 250px
        width: 80%
        max-width: 280px
      }

      .quote {
        position: relative
        text-align: center
        margin-top: 100px
        margin-bottom: 150px

        .wrapper {
          margin-top: 50px
          width: 450px
          max-width: 80%
        }
      }
    }
  }
}
