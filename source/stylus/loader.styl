// Loader styles

#loader {
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  margin: 0 auto
  background-color: background-color
  z-index: 2

  .percentage {
    position: absolute
    top: 45%
    right: 15px
    font: header-font
    color: text-color
    transform: translateX(200px)
  }

  .bar {
    position: absolute
    height: 1px
    top: 50%
    right: 100%
    left: 0%
    transform: translateY(-50%)
    background-color: text-color
  }

  .link-wrapper {
    position: absolute
    bottom: 20px
    left: 50%
    transform: translate(-50%, 500%)
    text-align: center
    opacity: 0.2

    #email-link {
      left: 50%
      transform: translateX(-50%)
      padding: 0
    }
  }
}
