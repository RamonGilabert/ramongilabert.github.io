// Footer styles

footer {
  position: relative
  width: 100%
  height: 500px
  background-color: dark-background-color
  overflow: hidden

  .inner {
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
    text-align: center

    .email {
      font: 17px Gilroy
      font-weight: 700
      color: white-color
      letter-spacing: -0.4px

      span {
        font: 18px -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica
        font-weight: 900
      }
    }

    .path {
      display: block
      margin-left: 50%
      transform: translateX(-50%)
      margin-top: 22px
      margin-bottom: 25px
      opacity: 0.15
    }

    .social {
      display: flex
      flex-direction: row
      flex-wrap: nowrap
      justify-content: center

      .social-icon {
        margin = 25px

        height: 20px
        margin-left: margin
        margin-right: margin
      }
    }
  }
}
