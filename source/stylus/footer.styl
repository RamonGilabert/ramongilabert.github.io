// Footer styles

footer {
  position: fixed
  bottom: 0
  width: 100%
  height: 100vh
  background-color: dark-background-color
  z-index: 1

  .back, .forward {
    mix-blend-mode: soft-light
    position: absolute
    display: inline-block

    a {
      display: inline-block
      font: 17px Gilroy
      font-weight: 400
      color: white-color
      letter-spacing: -0.3px
    }
  }

  .back {
    left: 20px
    bottom: 15px
    padding-left: 40px
  }

  .forward {
    bottom: footer-size - 36px
    right: 20px
    padding-right: 40px
  }

  .back:before, .forward:after {
    content: ''
    display: inline-block
    background-color: white-color
    position: absolute
    height: 2px
    top: 57%
    transform: translateY(-50%)
  }

  .back:before {
    left: 0%
    right: calc(100% - 33px)
    transition: 0.6s right ease
  }

  .forward:after {
    right: 0%
    left: calc(100% - 33px)
    transition: 0.6s left ease
  }

  .back:hover:before {
    right: 0%
  }

  .forward:hover:after {
    left: 0%
  }

  .circle {
    circle = 400px

    width: circle
    height: circle
  }

  .inner {
    position: absolute
    bottom: 250px
    left: 50%
    transform: translate(-50%, 50%)
    text-align: center

    .email {
      font: 20px Gilroy
      font-weight: 700
      cursor: pointer
      color: white-color
      letter-spacing: -0.4px

      span {
        font: 21px -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica
        font-weight: 900
      }
    }

    .path {
      display: block
      margin-left: 50%
      transform: translateX(-50%)
      margin-top: 23px
      margin-bottom: 18px
      opacity: 0.15
    }

    .social {
      display: flex
      flex-direction: row
      flex-wrap: nowrap
      justify-content: center
      align-content: center

      .social-icon {
        margin = 25px

        cursor: pointer
        max-height: 36px
        object-fit: cover
        margin-left: margin
        margin-right: margin
        transition: 0.45s transform ease
      }

      .social-icon:hover {
        scale = 0.9
        transform: scale3d(scale, scale, 1)
      }
    }
  }
}

@media (max-width: minimum-width) {
  footer {
    overflow: hidden

    .inner {
      bottom: 200px

      .email {
        font-weight: 400

        span {
          font-weight: 700
        }
      }
    }

    .back, .forward {
      position: absolute
      display: inline-block
    }

    .back {
      transform-origin: bottom right
      transform: translateX(-100%) rotateZ(90deg)
      bottom: 15px
      left: 10px
    }

    .forward {
      transform-origin: top left
      transform: translateX(100%) rotateZ(90deg)
      right: 10px
      bottom: mobile-footer-size - 36px
    }

    .inner .social .social-icon {
      margin = 15px

      margin-left: margin
      margin-right: margin
    }
  }
}
