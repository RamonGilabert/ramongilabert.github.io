// Colors

background-color = #F8F8F8
secondary-color = #F5F2F0
title-color = #333333
text-color = #222222
faded-title-color = #8C8075
faded-text-color = #7F7871
link-color = #31302F
highlight-color = #CBA0AA
clear-color = #FFFFFF
grid-color = #00D0F0

// Typography

type-base = 20px
type-ratio = 1.125
line-height-bottom = 1.5
line-height-top = 1.6

// Sizes

size-h1 = type-base * (type-ratio ** 8) // 51.316
size-h2 = type-base * (type-ratio ** 5) // 36.041
size-h3 = type-base * (type-ratio ** 4) // 32.036
size-h4 = type-base * (type-ratio ** 3) // 28.477
size-h5 = type-base * (type-ratio ** 2) // 25.313
size-h6 = type-base * (type-ratio ** 1) // 22.5
size-p = type-base // 20
size-l = type-base / (type-ratio ** 1) // 17.778
size-m = type-base / (type-ratio ** 2) // 15.802
size-s = type-base / (type-ratio ** 3) // 14.047

// Columns

column-0 = 3.0%
column-1 = 6.2%
column-2 = 12.4%
column-3 = 16.6%
column-4 = 19.9%
column-5 = 22.0%
column-6 = 25.0%
column-7 = 26.3%
column-8 = 40.0%
column-9 = 47.9%
column-10 = 50.0%
column-11 = 52.1%
column-12 = 60.0%
column-13 = 73.7%
column-14 = 75.0%
column-15 = 78.0%
column-16 = 80.1%
column-17 = 83.4%
column-18 = 87.6%
column-19 = 93.8%
column-20 = 97%

// Animations

curve = cubic-bezier(0.88, 0.12, 0.36, 0.79)
project-transition = 0.4s transform curve
margin-transition = 0.4s margin curve

// Queries

phone-width = 500px
minimum-width = 700px
medium-width = 900px
