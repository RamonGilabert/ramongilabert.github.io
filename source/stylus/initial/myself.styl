// The initial sites styles

#myself {
  position: fixed
  overflow: hidden

  #sections {
    width: 100%
    height: 100%
    min-width: minimum-width
    min-height: 100%
    -webkit-backface-visibility: hidden
    transform: translate3d(0, 0, 0)
    transform-style: preserve-3d
  }

  #manifesto figure {
    background-image: url(myself-image)
  }

  #lights figure {
    background-image: url(lights-image)
  }

  #varner figure {
    background-image: url(varner-image)
  }

  #branding figure {
    background-image: url(branding-image)
  }

  #indicator {
    position: absolute
    width: glitch-size
    height: 50px
    top: 100px
    right: 32px
  }

  #indicator:after {
    content: ''
    position: absolute
    width: 100%
    height: 100%
    background-color: text-color
    z-index: 0
  }

  #selected-work {
    position: absolute
    bottom: 80px
    left: 50%
    transform: translateX(-50%)
    transition: disappear-transition

    div {
      opacity: disabled-text-opacity
      position: relative
      transform: rotate(90deg)

      p {
        font: glitch-font
        padding-right: 50px
        padding-bottom: 10px
      }
    }

    div:after {
      content: ''
      position: absolute
      background-color: text-color
      height: glitch-size
      left: 40%
      right: 0%
      bottom: 0%
    }
  }

  #back-top-button {
    position: absolute
    left: 77px
    bottom: 30px
    font: glitch-font
    color: text-color
    padding-bottom: 10px
    cursor: default
    opacity: 0
    transition: disappear-transition
  }

  #back-top-button:after {
    content: ''
    position: absolute
    height: glitch-size
    right: 100%
    bottom: 0%
    left: 0%
    background-color: text-color
    transition: right glitch-transition
  }

  #back-top-button:hover:after {
    right: 0%
  }

  section {
    width: 100%
    height: 100%
    min-width: minimum-width
    min-height: 100%
    position: relative

    figure {
      background-size: cover
      background-repeat: no-repeat
      background-position: center
      width: 100%
      height: 100%
      min-height: 100%
      -webkit-backface-visibility: hidden
      transform: translate3d(0, 0, 0)
      transform-style: preserve-3d
    }

    div {
      position: absolute
      top: 50%
      left: 75px
      transform: translateY(-50%)
    }

    h2 {
      font: 55px Brandon
      text-transform: uppercase
      color: text-color
    }

    p {
      font: 16px Inconsolata
      max-width: 650px
      line-height: 26px
    }

    a {
      position: relative
      top: 7.5px
      font: 15px Inconsolata
      color: text-color
      padding-bottom: 5px
      padding-right: 50px
      cursor: pointer
    }

    a:before {
      content: ''
      position: absolute
      width: 70%
      height: glitch-size
      right: 0%
      bottom: 0%
      background-color: text-color
      transition: width glitch-transition
    }

    a:after {
      visibility: hidden
    }

    a:hover:before {
      width: 100%
    }
  }

  #lights, #branding {

    div {
      left: auto
      right: 125px
      padding-bottom: 30px
    }

    h2, p {
      text-align: right
    }

    a {
      position: absolute
      padding-right: 0px
      padding-left: 50px
      top: auto
      right: 0px
      bottom: 0px
    }

    a:before {
      left: 0%
      bottom: 0%
    }
  }

  nav {
    position: fixed
    top: 44%
    right: 0%
    transform: rotate(90deg) translateY(-50%)
    z-index: 1

    div {
      transform: rotate(180deg)
      display: inline-block
      margin: 0 auto
    }

    button {
      margin = 10px

      position: relative
      font: 15px Inconsolata
      margin-right: margin
      margin-left: margin
      color: text-color
    }

    a:hover:after {
      right: 100%
    }

    .disclosure-projects {
      top: 1px
      left: 330px
    }
  }

  #triangle {
    position: absolute
    background-image: url(triangle)
    background-size: contain
    background-repeat: no-repeat
    top: 0%
    right: 11px
    width: 7px
    height: 11px
  }
}

#myself:-webkit-scrollbar {
  width: 0
}
