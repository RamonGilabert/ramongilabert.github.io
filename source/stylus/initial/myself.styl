// The initial sites styles

#myself {
  overflow: hidden

  #sections {
    width: 100vw
    height: 100vh
    -webkit-backface-visibility: hidden
    -webkit-transform: translate3d(0, 0, 0)
    webkit-transform-style: preserve-3d
    transition: transform 0.7s ease
  }

  #manifesto figure {
    background-image: url(myself-image)
  }

  #lights figure {
    background-image: url(lights-image)
  }

  #varner figure {
    background-image: url(varner-image)
  }

  #branding figure {
    background-image: url(branding-image)
  }

  #indicator {
    position: absolute
    width: 1px
    height: 50px
    top: 100px
    right: 32px
  }

  #indicator:after {
    content: ''
    position: absolute
    width: 100%
    height: 100%
    background-color: text-color
    z-index: 0
  }

  section {
    width: 100vw
    height: 100vh
    position: relative

    figure {
      background-size: cover
      background-repeat: no-repeat
      background-position: center
      width: 100vw
      height: 100vh
      -webkit-backface-visibility: hidden
      -webkit-transform: translate3d(0, 0, 0)
      webkit-transform-style: preserve-3d
    }

    div {
      position: absolute
      top: 50%
      left: 75px
      transform: translateY(-50%)
    }

    h2 {
      font: 55px Brandon
      text-transform: uppercase
      color: text-color
    }

    p {
      font: 16px Inconsolata
      max-width: 650px
      line-height: 26px
    }

    button {
      position: relative
      font: 15px Inconsolata
      color: text-color
      margin-top: 15px
      padding-bottom: 5px
      padding-right: 50px
    }

    button:after {
      content: ''
      position: absolute
      width: 70%
      height: 0.5px
      right: 0%
      bottom: 0%
      background-color: text-color
      transition: width 0.6s ease
    }

    button:hover:after {
      width: 100%
    }
  }

  #lights, #branding {
    div {
      left: auto
      right: 125px
    }

    h2, p {
      text-align: right
    }

    button {
      position: absolute
      right: 0px
      padding-right: 0px
      padding-left: 50px
    }

    button:after {
      left: 0%
      bottom: 0%
    }
  }

  nav {
    position: fixed
    top: 44%
    right: 0%
    transform: rotate(90deg) translateY(-50%)
    z-index: 1

    div {
      transform: rotate(180deg)
      display: inline-block
      margin: 0 auto
    }

    button {
      margin = 10px

      position: relative
      font: 15px Inconsolata
      margin-right: margin
      margin-left: margin
      color: text-color
    }

    a:hover:after {
      right: 100%
    }

    .disclosure-projects {
      top: 1px
      left: 330px
    }
  }

  #triangle {
    position: absolute
    background-image: url(triangle)
    background-size: contain
    background-repeat: no-repeat
    top: 0%
    right: 11px
    width: 7px
    height: 11px
  }
}

#myself:-webkit-scrollbar {
  width: 0
}
