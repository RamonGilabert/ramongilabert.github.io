// The initial sites styles

#myself {

  section {
    width: 100vw
    height: 100vh
    position: relative

    div {
      position: absolute
      top: 50%
      left: 75px
      transform: translateY(-50%)
    }

    h2 {
      font: 55px Brandon
      text-transform: uppercase
      color: text-color
    }

    p {
      font: 16px Inconsolata
      max-width: 650px
      line-height: 26px
    }

    button {
      position: relative
      font: 15px Inconsolata
      color: text-color
      margin-top: 10px
      padding-bottom: 5px
      padding-right: 50px
    }

    button:after {
      content: ''
      position: absolute
      width: 70%
      height: 0.5px
      right: 0%
      bottom: 0%
      background-color: text-color
      transition: width 0.6s ease
    }

    button:hover:after {
      width: 100%
    }
  }

  nav {
    position: fixed
    top: 50%
    right: 0%
    transform: rotate(-90deg) translateY(-50%)
    z-index: 2

    a {
      margin = 10px

      position: relative
      font: 15px Inconsolata
      margin-right: margin
      margin-left: margin
    }

    figure {
      position: absolute
      background-image: url(triangle)
      background-size: contain
      background-repeat: no-repeat
      top: 0%
      right: 0%
      width: 7px
      height: 11px
      transform: rotate(90deg)
    }
  }
}
