.row {
	position: absolute
	width: 100%
	height: 100%
	
	for i in (0..20) {
		.column-{i} {
  		width: 1px
  		margin-left: lookup('column-' + i)
  		height: 100%
  		position: absolute
  		float: left
  		background-color: grid-color
  		opacity: 0.5
  	}
	}
}

.row:after {
  content: "";
  clear: both;
  display: table;
}
