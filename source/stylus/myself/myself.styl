// Myself page. The first one a user will see.

#myself {

  header {
    position: relative
    width: 100%
    height: 100%
    min-height: 800px
    background-color: dark-background-color

    .indicator {
      transform: rotateZ(90deg)
      right: 10px
      bottom: 67.5px
    }

    h2 {
      position: absolute
      top: 15px
      left: 50%
      transform: translateX(-50%)
      color: header-text-color
      opacity: 0.7
      font: 28px Gilroy
      font-weight: 700
      letter-spacing: -0.75px
    }

    .designer {
      position: absolute
      top: 52%
      right: 0
      left: 0
      margin: 0 auto
      transform: translateY(-50%)
      mix-blend-mode: soft-light
    }

    .myself {
      position: absolute
      height: 95%
      min-height: 750px
      bottom: 0
      left: 48.5%
      transform: translateX(-50%)
    }

    .noise {
      position: absolute
      width: 100%
      height: 100%
      background-image: url(../images/general/noise.png)
      background-repeat: repeat
      mix-blend-mode: overlay;
    }
  }

  .story {
    .inner {
      margin: 150px
      margin-left: 200px

      h2 {
        font: 100px Gilroy
        font-weight: 700
        letter-spacing: -2.5px
      }

      .path {
        margin-bottom: 15px
      }

      p {
        font: 18px Gilroy
        font-weight: 400
        letter-spacing: -0.4px
        line-height: 24px
        width: 525px
      }
    }
  }
}
