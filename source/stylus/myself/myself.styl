// Myself page. The first one a user will see.

#myself {

  header {
    position: relative
    width: 100%
    height: 100%
    min-height: 800px
    background-color: dark-background-color

    .designer {
      position: absolute
      top: 51%
      right: 0
      left: 0
      margin: 0 auto
      transform: translateY(-50%)
      mix-blend-mode: soft-light
    }

    .myself {
      position: absolute
      height: 95%
      min-height: 750px
      bottom: 0
      left: 48%
      transform: translateX(-50%)
    }

    .noise {
      position: absolute
      width: 100%
      height: 100%
      background-image: url(../images/general/noise.png)
      background-repeat: repeat
      mix-blend-mode: overlay;
    }
  }
}
