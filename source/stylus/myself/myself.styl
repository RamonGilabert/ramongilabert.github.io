.page {
  width: 100%
  max-width: maximum-width
  margin: 0 auto
  
  .wrapper {
    position: relative
    margin-right: percentage-2
    margin-left: percentage-2
  }
}

.projects {
  position: relative
  
  .mono {
    position: relative
    line-height: 1
    margin-left: -12.4%
    transform-origin: 0 0
    transform: rotate(-90deg) translateX(-450px)
    backface-visibility: hidden
    z-index: 1
  }
  
  .cards {
    display: flex
    flex-direction: column
    align-content: space-between
    flex-wrap: wrap
    padding-top: 20px
    padding-bottom: 20px
  }
}

.personal {
  position: relative
  
  .box {
    height: calc(100% + 220px)
    margin-top: -220px
  }
  
  .social {
    position: absolute
    transform-origin: 0% 100%
    transform: rotate(90deg) translateX(100px)
    line-height: 1
    z-index: 2
    margin-top: -250px
    white-space: nowrap
    backface-visibility: hidden
    
    a {
      font-family: 'Styrene B Web'
      font-weight: 500
      font-size: size-s
      text-transform: uppercase
      letter-spacing: 1.5px
    }
  }
}

.box {
  position: absolute
  margin-top: -80px
  margin-left: -column-2
  width: column-19
  height: 1444px
  background-color: secondary-color 
  z-index: 0
}
