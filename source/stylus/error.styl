// Error styles

#error {
  width: 100%
  height: 100%

  .back-button {
    position: absolute
    top: 17.5px
    font: header-font
    color: white
    padding-left: 50px
    padding-bottom: 7.5px
    left: corner-glitch-side
    cursor: pointer
  }

  .back-button:after {
    display: none
  }

  .back-button:before {
    content: ''
    position: absolute
    background-color: text-color
    height: glitch-size
    bottom: 0%
    left: 0%
    right: 35%
    transition: right glitch-transition
  }

  .back-button:hover:before {
    right: 0%
  }

  img {
    position: absolute
    width: 475px
    top: 49%
    left: 50%
    transform: translate(-50%, -50%)
  }

  .email-wrapper {
    position: absolute
    bottom: 30px
    left: 50%
    transform: translate(-50%, 0%)
    text-align: center
    opacity: 0.2

    a {
      font: detail-header-font
    }
  }
}

@media (max-width: minimum-width) {

  #error {

    img {
      position: absolute
      width: 350px
    }

    .email-wrapper {
      display: none
    }
  }
}
