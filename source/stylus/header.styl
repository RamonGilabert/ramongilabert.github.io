// Top navigation manifesto header

.detail, #manifesto, #myself {

  header {
    position: fixed
    width: 100%
    height: 60px
    min-width: minimum-width
    top: 0
    left: 0
    margin: 0 auto
    z-index: 1
    background-color: header-background-color
    transition: initial-opacity-transition
  }

  .email-link-wrapper {
    position: absolute
    margin-top: 32.5px
    transform: translateY(-50%)
    right: 105px
  }

  #email-link {
    font: header-font
  }

  #header-glitches {
    transition: initial-opacity-transition
  }

  #back-button {
    position: absolute
    top: 17.5px
    font: header-font
    color: white
    padding-left: 50px
    padding-bottom: 7.5px
    left: corner-glitch-side
  }

  #back-button:after {
    display: none
  }

  #back-button:before {
    content: ''
    position: absolute
    background-color: text-color
    height: glitch-size
    bottom: 0%
    left: 0%
    right: 35%
    transition: right glitch-transition
  }

  #back-button:hover:before {
    right: 0%
  }
}

#myself {

  #back-button {
    display: none
  }
}
