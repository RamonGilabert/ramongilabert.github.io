// General styles for a case study.

.case {
  .content {
    position: relative
    background-color: white-color
    z-index: 7
  }

  .home {
    position: fixed
    top: 15px
    left: 0
    transform: rotateZ(90deg)
    z-index: 2
    padding-left: 40px
    transition: project-transition

    a {
      color: text-color
    }
  }

  .home:after {
    opacity: 0
  }

  .home:before {
    content: ''
    position: absolute
    left: 0
    right: calc(100% - 33px)
    height: 2px
    top: 58%
    transform: translateY(-50%)
    margin-right: 0px
    background-color: text-color
    transition: 0.6s right ease
  }

  .home:hover:before {
    right: 0
  }

  header {
    .inner {
      position: relative
      padding: case-spacing case-spacing-title 0px case-spacing-title

      h2 {
        font: title-font
        font-weight: 700
        letter-spacing: -4px
      }

      .path {
        display: inline-block
        margin-bottom: 14px
        margin-right: 10px
      }

      .role {
        position: absolute
        display: inline-block
        text-transform: uppercase
        font: 18px Gilroy
        font-weight: 700
        color: gray-color
        letter-spacing: -0.4px
      }
    }
  }
}

#gluten, #lights {
  .top-path {
    margin-top: 10px
  }

  .role {
    margin-top: 6.5px
  }
}

#revolution {
  .top-path {
    margin-top: 0px
  }

  .role {
    margin-top: -3px
  }
}

@media (max-width: medium-width) {

  .case {
    header {
      .inner .role {
        display: none
      }
    }
  }
}

@media (max-width: minimum-width) {

  .case {
    .indicator {
      left: -20px
    }

    header {
      .inner {
        padding: 100px mobile-margin-side-case 0 mobile-margin-side-case

        h2 {
          font: mobile-title-font-landscape
          font-weight: 700
        }

        .role {
          display: none
        }
      }
    }
  }

  #gluten, #lights {
    .top-path {
      margin-top: 14px
    }
  }

  #revolution {
    .top-path {
      margin-top: -2px
    }
  }
}

@media (max-width: phone-width) {

  .case {
    header {
      .inner {
        h2 {
          font: mobile-title-font
          font-weight: 700
        }
      }
    }
  }
}
