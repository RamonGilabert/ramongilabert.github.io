// Colors style

.visually {
  .inner {
    position: relative
    margin: 0px case-spacing-subtitle 0px case-spacing-subtitle

    h4 {
      font: subtitle-text-font
      font-weight: 700
      letter-spacing: -1.5px
      margin-bottom: 12.5px
    }
  }

  .colors {
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    justify-content: space-around
    margin-top: case-spacing
    margin-bottom: case-spacing

    .color {
      position: relative
      width: 33.3%
      height: 300px

      p {
        position: absolute
        right: 10px
        bottom: 6px
        font: 17px Gilroy
        font-weight: 400
        letter-spacing: -0.5px
        color: white-color
      }
    }

    .four {
      width: 25%
    }

    .last {
      p {
        color: dark-gray-text-color
      }
    }
  }
}
