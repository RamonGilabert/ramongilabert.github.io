// The indicator in the site.

.indicator {
  position: absolute

  a, p {
    display: inline-block
    font: 15px Gilroy
    font-weight: 400
    color: white-color
    letter-spacing: -0.3px
  }
}

.indicator:after {
  content: ''
  background-color: white-color
  position: absolute
  height: 2px
  width: 30px
  top: 58%
  transform: translateY(-50%)
  margin-left: 8px
}

.dot {
  position: relative
  color: alternative-color
  margin: 0
  padding: 0
}

.spaced {
  transform: translateY(-50%)
}

.space {
  margin-top: 2.5px
  margin-bottom: 3px
}

