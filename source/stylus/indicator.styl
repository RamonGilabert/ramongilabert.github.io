// The indicator in the site.

.indicator {
  position: absolute

  a {
    font: 15px Gilroy
    font-weight: 400
    color: white-color
  }
}

.indicator:after {
  content: ''
  background-color: white-color
  position: absolute
  height: 2px
  width: 30px
  top: 58%
  transform: translateY(-50%)
  margin-left: 8px
}

.dot {
  position: relative
  color: alternative-color
  margin: 0
  padding: 0
}

.spaced {
  transform: translateY(-50%)
}

.circle {
  circle = 750px

  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  margin: auto auto
  border-radius: 50%
  width: circle
  height: circle
  mix-blend-mode: soft-light
  background-color: white-color
  filter: blur(250px)
  opacity: 0.6
  transform: translate3d(0, 0, 0);
}

.noise {
  position: absolute
  width: 100%
  height: 100%
  background-image: url(../images/general/noise.png)
  background-repeat: repeat
  mix-blend-mode: overlay;
}
