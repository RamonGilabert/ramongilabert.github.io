.propositions {
	position: relative
	margin-top: 120px
	padding-bottom: 160px
	
	.full-box {
		position: absolute
		width: 100vw
		bottom: 0%
		background-color: secondary-color
		z-index: 0
		top: -180px
	}
	
	.wrap {
		position: relative
		z-index: 2
		display: flex
		flex-direction: row
		align-items: flex-start
		width: 100%
		z-index: 2
		
		.hobby {
			display: flex
			flex-direction: row
			align-content: space-between
			flex-wrap: nowrap
			justify-content: flex-start
			padding-bottom: 0px
			width: grid(2, 9)
			max-width: max-grid(2, 9)
			
			.mono {
				width: 50px
				margin-right: 15%
			}
			
			.pieces {
				.text {
					margin-bottom: 16px
				}
			}
		}
	}
}

@media (max-width: median-width) {
	.propositions {
		padding-bottom: 180px
	}
}

@media (max-width: midiu-width) {
	.propositions {
		padding-bottom: 100px
		
		.wrap {
			margin-top: -20px
			width: grid(1, 19)
			max-width: max-grid(1, 19)
			margin-bottom: 0px
			
			.hobby {
				width: 50%
				
				.pieces {
					.text {
						font-size: size-l
						line-height: 30px
						margin-bottom: 8px
					}
				}
			}
		}
	}
}

@media (max-width: minimum-width) {
	.propositions {
		margin-top: 100px
		padding-bottom: 60px
		
		.wrap {
			flex-direction: column
			align-items: flex-start
			
			.hobby {
				flex-direction: column
				width: grid(1, 19) !important
				padding-bottom: 40px
				
				.mono {
					width: 50px
					margin-top: 4px
					margin-right: 0px
					margin-bottom: 12px
				}
				
				.pieces {
					.text {
						font-size: size-l
						line-height: 30px
						margin-bottom: 8px
					}
				}
			}
		}
	}
}

@media (max-width: phone-width) {
	.propositions {
		margin-top: 60px
		padding-bottom: 20px
		
		.wrap {
			margin-bottom: 6px !important
		}
	}
}
