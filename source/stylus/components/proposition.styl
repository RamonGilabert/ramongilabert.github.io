.propositions {
	position: relative
	margin-top: 120px;
	
	.full-box {
		position: absolute
		width: 100vw
		height: 712px
		background-color: secondary-color
		z-index: 0
		margin-top: -360px
	}
	
	.wrap {
		position: relative
		z-index: 1000
		display: flex
		flex-direction: row
		align-items: flex-start
		width: 100%
		z-index: 2
		
		.hobby {
			display: flex
			flex-direction: row
			align-content: space-between
			flex-wrap: nowrap
			justify-content: flex-start
			margin-bottom: 120px
			width: grid(2, 9)
			max-width: max-grid(2, 9)
			
			.mono {
				width: 50px
				margin-right: 15%
			}
			
			.pieces {
				.text {
					margin-bottom: 16px
				}
			}
		}
	}
}

@media (max-width: minimum-width) {
	.propositions {
		height: auto
		margin-top: 100px;
		
		.full-box {
			height: 700px
			margin-top: -150px
		}
		
		.wrap {
			flex-direction: column
			align-items: flex-start
			
			.hobby {
				flex-direction: column
				width: grid(1, 19) !important
				margin-bottom: 40px
				
				.mono {
					width: 50px
					margin-top: 4px
					margin-right: 0px
					margin-bottom: 12px
				}
				
				.pieces {
					.text {
						font-size: size-l
						line-height: 30px
						margin-bottom: 8px
					}
				}
			}
		}
	}
}

@media (max-width: median-width) {
	.propositions {
		.wrap {
			margin-top: -20px
			width: grid(1, 19)
			max-width: max-grid(1, 19)
			margin-bottom: 80px
			
			.hobby {
				width: 50%
				
				.pieces {
					.text {
						font-size: size-l
						line-height: 30px
						margin-bottom: 8px
					}
				}
			}
		}
	}
}
