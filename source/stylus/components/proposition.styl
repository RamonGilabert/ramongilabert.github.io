.propositions {
	position: relative
	margin-top: 120px;
	
	.full-box {
		position: absolute
		width: 100vw
		height: 712px
		background-color: secondary-color
		z-index: 0
		margin-top: -360px
	}
	
	.wrap {
		position: relative
		z-index: 1000
		display: flex
		flex-direction: row
		align-items: center
		width: 100%
		z-index: 2
		
		.hobby {
			display: flex
			flex-direction: row
			align-content: space-between
			flex-wrap: nowrap
			justify-content: flex-start
			margin-bottom: 120px
			width: grid(2, 9)
			max-width: max-grid(2, 9)
			
			.mono {
				width: 50px
				margin-top: 4px
				margin-right: 136px
			}
			
			.pieces {
				.text {
					margin-bottom: 16px
				}
			}
		}
	}
}
