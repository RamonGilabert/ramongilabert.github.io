.hobbies {
	position: relative
	display: flex
  flex-direction: column
  align-content: space-between
  flex-wrap: wrap
  width: 100%
  height: 700px
  margin-top: 160px
  
	.hobby {
		display: flex
		flex-direction: row
		align-content: space-between
		margin-bottom: 120px
		width: grid(2, 9)
		max-width: max-grid(2, 9)
		
		.mono {
			width: 50px
			margin-top: 4px
			margin-right: 136px
		}
		
		.pieces {
			.text {
				font-size: size-h6
				line-height: 32px
				margin-bottom: 16px
			}
		}
	}
}