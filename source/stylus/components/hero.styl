.hero {
	width: 100%
	padding-top: 140px
	display: flex
	flex-direction: row
	align-items: center
	justify-content: space-between

	.text {
		margin-bottom: 188px
		width: grid(2, 9)
		max-width: max-grid(2, 9)
		
		h1 {
			margin-bottom: 12px
			line-height: 56px
		}

		p {
			font-size: size-h6
			line-height: 36px
		}
	}
	
	.illustration {
		z-index: 1
		
		svg {
			margin-right: calc(grid(2, 3))
			width: 37.5vw
			max-width: 490px
			float: right
		}
	}
}

@media (max-width: minimum-width) {
	.hero {
		padding-top: 160px !important
		
		.text {
			width: 100% !important
		}
		
		.illustration {
			display: none
		}
	}
}

@media (max-width: medium-width) {
	.hero {
		padding-top: 100px
		padding-bottom: 40px
		
		.text {
			margin-bottom: 120px
			width: grid(1, 9)
			
			p {
				font-size: size-l
				line-height: 28px
			}
		}
	}
}

@media (max-width: median-width) {
	.hero {
		.text {
			h1 {
				font-size: size-h25
				margin-bottom: 12px
				line-height: 36px
			}
			
			p {
				font-size: size-p
				line-height: 32px
			}
		}
		
		.illustration {
			svg {
				width: 32.5vw
			}
		}
	}
}

@media (min-width: 1920px) {
	.hero {
		.illustration {
			img {
				margin-right: max-grid(2, 3)
			}
		}
	}
}
